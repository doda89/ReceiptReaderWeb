{
    "version": 2,
    "framework": "flask",
    "buildCommand": "pip install -r requirements.txt",
    "outputDirectory": ".",
    "builds": [
        {
            "src": "vercel_app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "vercel_app.py"
        }
    ]
} 